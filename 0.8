import java.util.ArrayList;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        ArrayList<UserAccount> userAccountList = new ArrayList<>();
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.print("Enter user ID: ");
            int userID = scanner.nextInt();
            System.out.print("Enter user first name: ");
            String userFirstName = scanner.next();
            System.out.print("Enter user last name: ");
            String userLastName = scanner.next();
            System.out.print("Enter user created date: ");
            String userCreatedDate = scanner.next();

            UserAccount user = new UserAccount(userID, userFirstName, userLastName, userCreatedDate);
            userAccountList.add(user);

            while (true) {
                System.out.print("Do you want to add a genre to the user? (yes/no): ");
                String answer = scanner.next();
                if (answer.equalsIgnoreCase("yes")) {
                    System.out.print("Enter genre: ");
                    String genre = scanner.next();
                    user.addGenre(genre);
                } else {
                    break;
                }
            }

            while (true) {
                System.out.print("Do you want to remove a genre from the user? (yes/no): ");
                String answer = scanner.next();
                if (answer.equalsIgnoreCase("yes")) {
                    System.out.print("Enter genre: ");
                    String genre = scanner.next();
                    user.removeGenre(genre);
                } else {
                    break;
                }
            }

            System.out.print("Do you want to add another user? (yes/no): ");
            String answer = scanner.next();
            if (!answer.equalsIgnoreCase("yes")) {
                break;
            }
        }

        // Print the user account list
        for (UserAccount user : userAccountList) {
            System.out.println("User ID: " + user.getUserID());
            System.out.println("User Name: " + user.getUserFirstName() + " " + user.getUserLastName());
            System.out.println("User Created Date: " + user.getUserCreatedDate());
            System.out.println("User Genre Preferences: " + user.getUserGenrePreferences());
            System.out.println();
        }
    }
}
